@using Microsoft.AspNetCore.Identity
@using ProblemAndSolution.Infrastructure.Entities.Membership
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model BlogViewModel
@{
    ViewData["Title"] = "Details";
}                                  
    
<div class="container my-5">
    <div class="row">
        <!-- Blog Details Section -->
        <div class="col-lg-8 col-md-7 mr-4">
            @if (Model != null)
            {
                <h3 class="mb-3">Heading: @Model.Tag</h3>
                <div class="justify-content-between mb-3">
                    <a href="@Url.Action("UserprofileDetails", "Home", new { userId = Model.UserId })">
                        Author: @Model.Author
                    </a>
                </div>
                <div class="justify-content-between mb-3">
                    <span class="text-secondary ">@Model.PublishedDate.ToString("MMMM dd, yyyy")</span>

                </div>
                <div class="mb-3">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (Model.Liked)
                        {
                            <button style="cursor: pointer; background: none; border: none;">
                                <i class="bi bi-hand-thumbs-up-fill"></i>
                            </button>
                        }
                        else
                        {
                            <button onclick="LoadQusnVote()" style="cursor: pointer; background: none; border: none;">
                                <i class="bi bi-hand-thumbs-up"></i>
                            </button>
                        }
                    }
                    <span id="totalLikes">@Model.TotalLikes</span> likes
                    <input type="text" hidden value="@Model.Id" class="getQuesId" />
                </div>

                <!-- Blog Image -->
                <img src="@Model.ImageUrl" style="max-width: 70%;" class="mx-auto d-block" />

                <!-- Blog Content -->
                <div class="mb-3 blog-details-content">
                    @Html.Raw(Model.Content)
                </div>

                <!-- Comment Section -->
                <div class="card w-100">
                    <div class="card-header">
                        <h5>Comments</h5>
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Comment Description</label>
                                <input type="text" class="form-control" asp-for="CommentDescription" />
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-dark">Save</button>
                            </div>
                            <div class="mb-3">
                                <h5>Comments: @Model.NoOfComment</h5>
                            </div>
                        </form>
                    </div>

                    <div class="card-body">
                        @if (Model.comments != null && Model.comments.Any())
                        {
                            @foreach (var comment in Model.comments)
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <p>@comment.Description</p>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-secondary">@comment.Author</span>
                                            <span class="text-secondary">@comment.DateAdded.ToString("MMMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            }
            else
            {
                <p>Blog post not found!</p>
            }
        </div>

        <!-- Recent Posts Section -->
        <div class="col-lg-4 col-md-5 mb-4">
            <div class="recent-posts">
                <h4 class="mb-3">Recent Posts</h4>
                <div class="row">
                    @foreach (var post in Model.RecentBlog)
                    {
                        <div class="col-lg-12 col-md-6 mb-4">
                            <div class="card">
                                <img src="@post.ImageUrl" class="card-img-top" alt="@post.Tag" style="height: 150px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@post.Tag</h5>
                                    <p class="card-text text-muted">@post.PublishedDate.ToString("MMMM dd, yyyy")</p>
                                    <a href="@Url.Action("Details", "Home", new { id = post.Id })" class="btn btn-primary">Read More</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        function LoadQusnVote() {
            var quesId = $(".getQuesId").val();
            console.log(quesId);
            $.ajax({
                url: '@Url.Action("AddLike", "Home")',
                type: 'POST',
                cache: false,
                data: { 'quesId': quesId },
                success: function (result) {
                    console.log("saved");
                    location.href = `/Home/Details/${quesId}`;
                },
                error: function (result) {
                    if (result.status == 401) {
                        location.href = '/Account/Login';
                    }
                }
            });
        }
    </script>    
}