@model BlogViewModel
@{
    ViewData["Title"] = "BlogList";
}

<!-- Hero Section -->
<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 text-primary mb-3">
                <i class="bi bi-code-slash"></i> Bloggie - The Dev Blog
            </h1>
            <p class="lead text-muted">
                Bloggie is the home to coding blogs covering a vast range of
                topics like HTML, CSS, JavaScript, ASP.NET, C#, Angular, and more.
                Want to stay updated? Join the Bloggie app and receive weekly blogs in your email.
            </p>
        </div>

        <div class="col-12 col-lg-6 text-center">
            <img src="https://images.pexels.com/photos/57690/pexels-photo-57690.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="Bloggie - Dev blogs"
                 class="d-block mx-auto img-fluid rounded shadow-lg" width="350" />
        </div>
    </div>
</div>

<!-- Blog List Section -->
<div class="container">
    <div class="row">
        @if (Model != null && Model.blog.Any())
        {
            @foreach (var blogPost in Model.blog)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                        <!-- Blog Image -->
                        <img src="@blogPost.ImageUrl" alt="@blogPost.Tag" class="card-img-top"
                             style="height: 200px; object-fit: cover;">

                        <!-- Blog Content -->
                        <div class="card-body">
                            <h5 class="card-title text-primary">@blogPost.Tag</h5>
                            <p class="text-muted small">
                                <i class="bi bi-person"></i> Author: <strong>@blogPost.Author</strong><br />
                                <i class="bi bi-calendar"></i> Published: @blogPost.PublishedDate.ToShortDateString()
                            </p>
                            <p class="card-text text-secondary">@blogPost.ShortDescription</p>

                            <a asp-action="Details" class="btn btn-dark w-100 rounded-pill mt-2" asp-route-Id="@blogPost.Id">
                                <i class="bi bi-arrow-right-circle"></i> Read More
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-info fw-bold">No blog posts found!</div>
            </div>
        }
    </div>
</div>
